<UserControl
    x:Class="SomeShapes.QuestionSlate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SomeShapes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="900"
    d:DesignHeight="300">
   <Grid>
      <Grid x:Name="Slot1"
         Width="200"
         Height="200"
         Margin="0,0,600,0"
         IsHitTestVisible="True"
         Tapped="Slot1_OnTapped">
      </Grid>

      <Grid x:Name="Slot2"
         Width="200"
         Height="200"
         IsHitTestVisible="True"
         Tapped="Slot2_OnTapped">
      </Grid>

      <Grid x:Name="Slot3"
         Width="200"
         Height="200"
         Margin="600,0,0,0"
         IsHitTestVisible="True"
         Tapped="Slot3_OnTapped">
      </Grid>
   </Grid>
</UserControl>
